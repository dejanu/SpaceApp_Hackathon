{
	"manifest_version": 2,
	"name": "Ext",
	"version": "0.0.1",
	"content_scripts": [{
		"matches": [
			"<all_urls>"
		],
		"js": ["content.js"]
	}],

	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "d.jpg",
        "default_popup": "pop.html",
        "default_title": "A popup"
	}


}